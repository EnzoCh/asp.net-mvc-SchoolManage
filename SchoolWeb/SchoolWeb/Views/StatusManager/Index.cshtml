
@{
    Layout = null;
    ViewBag.Title = "Index";
}

<link rel="apple-touch-icon" sizes="76x76" href="~/Content/assets/img/apple-icon.png">
<link rel="icon" type="image/png" sizes="96x96" href="~/Content/assets/img/favicon.png">
<link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/assets/css/animate.min.css" rel="stylesheet" />
<link href="~/Content/assets/css/paper-dashboard.css" rel="stylesheet" />
<link href="~/Content/assets/css/themify-icons.css" rel="stylesheet">
<link href="~/Content/comment.css" rel="stylesheet">
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div id="mian">
                    <div id="title">
                        <h1>学籍管理</h1>
                    </div>
                    @using (Html.BeginForm())
                    {
                        <div id="search">
                            <div id="searchbox">@Html.TextBox("Index", null, new { @class = "text-danger form-control border-input", @placeholder = "请输入学生姓名" })</div>
                            <div id="searchbut">&nbsp;&nbsp;&nbsp;<input type="submit" value="搜 索" class="btn btn-info" /><button type="button" class="btn btn-info" onclick="javascript: window.location = '/StatusManager/Add'">添加学籍信息<span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button></div>
                        </div>
                    }
                </div>
                <div class="content table-responsive table-full-width cont">
                    <table class="table table-striped" id="sampleTableA">
                        <thead>
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    姓名
                                </th>
                                <th>
                                    性别
                                </th>
                                <th>
                                    身份证
                                </th>
                                <th>
                                    政治面貌
                                </th>
                                <th>
                                    联系人
                                </th>
                                <th>
                                    联系地址
                                </th>
                                <th>
                                    联系电话
                                </th>
                                <th>
                                    准考证号
                                </th>
                                <th>
                                    考生号
                                </th>
                                <th>
                                    考生类别
                                </th>
                                <th>
                                    生源省份
                                </th>
                                <th>
                                    入学年份
                                </th>
                                <th>
                                    入学方式
                                </th>
                                <th>
                                    备注
                                </th>
                                <th>
                                    操作
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                                <tr>
                                    <td>
                                        @item.ID
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Sex
                                    </td>
                                    <td>
                                        @item.IdCard
                                    </td>
                                    <td>
                                        @item.LandScape
                                    </td>
                                    <td>
                                        @item.ContactPerson
                                    </td>
                                    <td>
                                        @item.ContactAddress
                                    </td>
                                    <td>
                                        @item.ContactNumber
                                    </td>
                                    <td>
                                        @item.AdmissionNumber
                                    </td>
                                    <td>
                                        @item.CandidateNumber
                                    </td>
                                    <td>
                                        @item.Type
                                    </td>
                                    <td>
                                        @item.Province
                                    </td>
                                    <td>
                                        @item.Year
                                    </td>
                                    <td>
                                        @item.ModeAdmission
                                    </td>
                                    <td>
                                        @item.Reamrk
                                    </td>
                                    <td>

                                        <a href="javascript:window.open('update?id=@item.ID','updateInfo','width=850,height=850,top=200,left=500');">修改</a>
                                        @Html.ActionLink("删除", "delete", new { id = @item.ID }, new { onclick = "confirm('你确认删除吗？')" })

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </div>
</div>

<script src="../../Content/js/jquery-1.11.0.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/js.geotools/dist/geotools.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/js.geotools/dist/geotools-swedish-zipcodes.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/moment@2.24.0/moment.min.js"></script>
<script src="../../Content/src/fancyTable.js"></script>
<script type="text/javascript">
    // Word genarator
    function rWord(r) { var t, n = "bcdfghjklmnpqrstvwxyz", a = "aeiou", e = function (r) { return Math.floor(Math.random() * r) }, o = ""; r = parseInt(r, 10), n = n.split(""), a = a.split(""); for (t = 0; t < r / 2; t++) { var l = n[e(n.length)], p = a[e(a.length)]; o += 0 === t ? l.toUpperCase() : l, o += 2 * t < r - 1 ? p : "" } return o }

    $(document).ready(function () {
        // And make them fancy
        $("#sampleTableA").fancyTable({
            sortColumn: 0,
            pagination: true,
            perPage: 5,
            globalSearch: true
        });
    });
</script>


