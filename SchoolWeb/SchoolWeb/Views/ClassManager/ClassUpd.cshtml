@model SchoolWeb.Models.ClassInfo
@{
    Layout = null;
}

<link rel="apple-touch-icon" sizes="76x76" href="~/Content/assets/img/apple-icon.png">
<link rel="icon" type="image/png" sizes="96x96" href="~/Content/assets/img/favicon.png">
<link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/assets/css/animate.min.css" rel="stylesheet" />
<link href="~/Content/assets/css/paper-dashboard.css" rel="stylesheet" />
<link href="~/Content/assets/css/themify-icons.css" rel="stylesheet">
<link href="~/Content/comment.css" rel="stylesheet">
<style>
    #main table {
        margin-left: 30px;
    }

    .alignright {
        text-align: right;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="main">
        <h1 style="text-align:center;">修改课程信息</h1>
        <br />
        <hr />
        <table border="0" width="400px" height="400px">
            <tr>
                <td class="alignright">课程号：</td>
                <td>
                    <input type="text" class="form-control border-input" name="courseid" placeholder="请输入课程号" value="@ViewBag.data.Cou_No">
                </td>
            </tr>
            <tr>
                <td class="alignright">课程名称：</td>
                <td>
                    <input type="text" class="form-control border-input" name="coursename" placeholder="请输入课程名称" value="@ViewBag.data.Cou_Name">
                </td>
            </tr>
            <tr>
                <td class="alignright">授课老师编号：</td>
                <td>
                    @Html.DropDownList("Cou_Tid", null, new { @class = "form-control border-input" })
                </td>
            </tr>
            <tr>
                <td class="alignright">课程类型:</td>
                <td>
                    <div class="col-sm-12">
                        <select class="form-control border-input" name="ctype">
                            <option value="必修">必修</option>
                            <option value="选修">选修</option>
                            <option value="公共">公共</option>
                        </select>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="alignright">备注:</td>
                <td>
                    <input type="text" class="form-control border-input" name="remark" placeholder="请输入课程备注" value="@ViewBag.data.Remark">
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align:center;">
                    <button class="btn btn-success" type="submit">提交</button>&nbsp;&nbsp;
                    <button class="btn btn-info" type="reset">重置</button>&nbsp;&nbsp;
                    <button class="btn btn-info" type="button" id="hf">返回</button>
                </td>
            </tr>
        </table>
    </div>
}
<script src="../../Content/js/jquery-1.11.0.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/js.geotools/dist/geotools.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/js.geotools/dist/geotools-swedish-zipcodes.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/moment@2.24.0/moment.min.js"></script>
<script src="../../Content/src/fancyTable.js"></script>
<script type="text/javascript">
    $(function () {
        $("#hf").click(function () {
            history.go(-1);
        })
    })
</script>