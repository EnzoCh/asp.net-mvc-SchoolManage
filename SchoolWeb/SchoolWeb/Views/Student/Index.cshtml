@model IEnumerable<SchoolWeb.Models.Student>

@{
    ViewBag.Title = "学生信息管理";
    Layout = null;
}

<link rel="apple-touch-icon" sizes="76x76" href="~/Content/assets/img/apple-icon.png">
<link rel="icon" type="image/png" sizes="96x96" href="~/Content/assets/img/favicon.png">
<link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/assets/css/animate.min.css" rel="stylesheet" />
<link href="~/Content/assets/css/paper-dashboard.css" rel="stylesheet" />
<link href="~/Content/assets/css/themify-icons.css" rel="stylesheet">
<link href="~/Content/comment.css" rel="stylesheet">
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div id="mian">
                    <div id="title">
                        <h1>学生信息管理</h1>
                    </div>
                    @using (Html.BeginForm())
                    {
                        <div id="search">
                            <div id="searchbox"><input class="text-danger form-control border-input" type="text" placeholder="请输入姓名" /></div>
                            <div id="searchbut">&nbsp;&nbsp;&nbsp;<button class="btn btn-info" type="submit">搜索</button>&nbsp;&nbsp;&nbsp;@Html.ActionLink("添加新学生信息", "Create", new { @class = "btn btn-default glyphicon glyphicon-plus" })</div>
                        </div>
                    }
                </div>
                <div class="content table-responsive table-full-width cont">
                    <table class="table table-striped" id="sampleTableA">
                        <thead>
                            <tr>
                                <th>
                                    学号
                                </th>
                                <th>
                                    姓名
                                </th>
                                <th>
                                    性别
                                </th>
                                <th>
                                    出生日期
                                </th>
                                <th>
                                    联系电话
                                </th>
                                <th>
                                    班级号
                                </th>
                                <th>
                                    家庭地址
                                </th>
                                <th>
                                    进校日期
                                </th>
                                <th>
                                    邮箱
                                </th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.S_No)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.S_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.S_Sex)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.S_Birthday)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.S_ClassNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.S_Telephone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.S_Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.S_Indate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.S_Email)
                                    </td>
                                    <td>
                                        @Html.ActionLink("编辑", "Edit", new { id = item.S_No })
                                        @*@Html.ActionLink("详情", "Details", new { id = item.S_No })*@
                                        @Html.ActionLink("删除", "Delete", new { id = item.S_No })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </div>
</div>

<script src="../../Content/js/jquery-1.11.0.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/js.geotools/dist/geotools.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/js.geotools/dist/geotools-swedish-zipcodes.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/moment@2.24.0/moment.min.js"></script>
<script src="../../Content/src/fancyTable.js"></script>
<script type="text/javascript">
    // Word genarator
    function rWord(r) { var t, n = "bcdfghjklmnpqrstvwxyz", a = "aeiou", e = function (r) { return Math.floor(Math.random() * r) }, o = ""; r = parseInt(r, 10), n = n.split(""), a = a.split(""); for (t = 0; t < r / 2; t++) { var l = n[e(n.length)], p = a[e(a.length)]; o += 0 === t ? l.toUpperCase() : l, o += 2 * t < r - 1 ? p : "" } return o }

    $(document).ready(function () {
        // And make them fancy
        $("#sampleTableA").fancyTable({
            sortColumn: 0,
            pagination: true,
            perPage: 5,
            globalSearch: true
        });
    });
</script>


