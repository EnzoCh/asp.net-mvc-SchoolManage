@{
    Layout = null;
}

<link rel="apple-touch-icon" sizes="76x76" href="~/Content/assets/img/apple-icon.png">
<link rel="icon" type="image/png" sizes="96x96" href="~/Content/assets/img/favicon.png">
<link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/assets/css/animate.min.css" rel="stylesheet" />
<link href="~/Content/assets/css/paper-dashboard.css" rel="stylesheet" />
<link href="~/Content/assets/css/themify-icons.css" rel="stylesheet">
<link href="~/Content/comment.css" rel="stylesheet">
<style>
    #main table {
        margin-left: 30px;
    }

    .alignright {
        text-align: right;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="main">
        <h1 style="text-align:center;">选课</h1>
        <br />
        <hr />
        <table border="0" width="400px" height="600px">
            @if (ViewBag.Data != null)
            {
                for (int i = 0; i < ViewBag.Data.Count; i++)
                {
                    <tr>
                        <td class="alignright">课程编号：</td>
                        <td>
                            <input type="text" class="form-control border-input" name="courseNo" readonly="readonly" value="  @ViewBag.Data[i].CouNo">
                        </td>
                    </tr>
                    <tr>
                        <td class="alignright">课程名称：</td>
                        <td>
                            <input type="text" class="form-control border-input" name="courseName" readonly="readonly" value="  @ViewBag.Data[i].CouName ">
                        </td>
                    </tr>
                    <tr>
                        <td class="alignright">老师名称：</td>
                        <td>
                            <input type="text" class="form-control border-input" name="staName" readonly="readonly" value="  @ViewBag.Data[i].StaName ">
                        </td>
                    </tr>
                    <tr>
                        <td class="alignright">课程类型：</td>
                        <td>
                            <input type="text" class="form-control border-input" name="coursetype" readonly="readonly" value=" @ViewBag.Data[i].CouType ">
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align:center;">
                            <button class="btn btn-success" type="submit">提交</button>&nbsp;&nbsp;
                            @Html.ActionLink("返回", "Index")
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
}